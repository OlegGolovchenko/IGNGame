<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<Platforms>AnyCpu;x86;x64</Platforms>
		<RootNamespace>org.igrok_net.game</RootNamespace>
		<IsWindows Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Windows)))' == 'true'">true</IsWindows>
	</PropertyGroup>

	<PropertyGroup Condition="'$(IsWindows)'=='true'">
		<DefineConstants>WINDOWS</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
		<Folder Include="lib\" />
	</ItemGroup>

	<ItemGroup>
		<GlfwDll Include="lib\win32\glfw3.dll" Condition="'$(Platform)' == 'x86'" />
		<GlfwDll Include="lib\win64\glfw3.dll" Condition="'$(Platform)' == 'x64'" />
	</ItemGroup>

	<ItemGroup>
		<FreeglutDll Include="lib\win32\freeglut.dll" Condition="'$(Platform)' == 'x86'" />
		<FreeglutDll Include="lib\win64\freeglut.dll" Condition="'$(Platform)' == 'x64'" />
	</ItemGroup>

	<PropertyGroup>
		<!-- Define the destination path based on platform -->
		<GLFWDestination>bin\$(Platform)\$(Configuration)\net8.0\glfw.dll</GLFWDestination>
		<GlutDestination>bin\$(Platform)\$(Configuration)\net8.0\glut.dll</GlutDestination>
	</PropertyGroup>

	<Target Name="CopyDllToBin" AfterTargets="Build">
		<Copy SourceFiles="@(GlfwDll)" DestinationFiles="$(GLFWDestination)" />
		<Copy SourceFiles="@(FreeglutDll)" DestinationFiles="$(GlutDestination)" />
	</Target>

</Project>
